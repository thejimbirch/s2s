{#
/**
 * @file
 * Theme override for the card display of a node.
 *
 */
#}
{% embed "@bootstrap/components/card/card.twig" with
  {
    title: card.title,
    image: card.image,
    links: card.links,
    url: card.url,
    stretched_link: card.stretched_link,
    date: card.date ? content.field_experience_date : FALSE,
    card_modifiers: card.card_modifiers,
    description: content.field_description[0] ? content.field_description : FALSE,
  }
%}
  {% block contextual_links %}
    {{ content.contextual_links }}
  {% endblock %}
  {% block image %}
    {% if card.image %}
      {{ drupal_image(card.image.uri, 'card', responsive=true) }}
    {% endif %}
  {% endblock %}
{% endembed %}

