<article{{ attributes }}>
  {% if featured_image %}
    <div class="featued-image-container {{ field_img_container_width }}">
      {{ content.field_featured_image }}
    </div>
  {% endif %}
  <div class="container">
    <h1 class="mt-3">
      {{ drupal_title() }}
    </h1>
  </div>
  <div class="primary-content">
    {{ content|without('field_featured_image')  }}
  </div>
</article>
