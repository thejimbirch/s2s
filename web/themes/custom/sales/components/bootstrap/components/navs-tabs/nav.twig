{# Drupal Specific #}
{% if primary %}
  <h2 class="visually-hidden">{{ 'Primary tabs'|t }}</h2>
  <nav {{ bem('nav nav-tabs', modifiers, [], extra_classes) }}>{{ primary }}</nav>
{% endif %}
{% if secondary %}
  <h2 class="visually-hidden">{{ 'Secondary tabs'|t }}</h2>
  <nav  class="nav">{{ secondary }}</nav>
{% endif %}

<nav {{ bem('nav', modifiers, [], extra_classes) }}>
  {% for item in nav %}
    {% if loop.first %}
      <a class="nav-link active" href="{{ item.link.url }}">{{ item.link.title }}</a>
    {% else %}
      <a class="nav-link" href="{{ item.link.url }}">{{ item.link.title }}</a>
    {% endif %}
  {% endfor %}
</nav>
