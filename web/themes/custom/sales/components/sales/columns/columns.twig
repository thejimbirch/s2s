{% set additional_attributes = {
  class: 'grid-columns',
} %}

<div{{ add_attributes(additional_attributes) }}>
  {% block contextual_links %}
    {{ content.contextual_links }}
  {% endblock %}
  {# Heading #}
  {% if heading %}
    <h2 class="grid-columns__heading">{{ heading | raw }}</h2>
  {% endif %}
  {# Description #}
  {% if description %}
    <div class="grid-columns__description">{{ description | raw }}</div>
  {% endif %}
  {# Cards #}
  <div class="grid-columns__columns mt-3 mb-3">
    <div class="row row-cols-{{ mobile }} row-cols-md-{{ tablet }} row-cols-lg-{{ desktop }} g-{{ gutter }} {{ justify_content }}">
      {% block columns %}
        {# This loop is just used to demonstrate columns in Storybook. #}
        {% for i in range(1, numberOfColumns) %}
          <div class="col">
            <div class="p-3 border bg-light">col {{ loop.index }}</div>
          </div>
        {% endfor %}
      {% endblock %}
    </div>
  </div>
</div>
