{% set nav_bar_extra_classes = [
  'navbar-expand-lg',
  'navbar-dark bg-dark'
]
%}
{% block contextual_links %}
  {{ content.contextual_links }}
{% endblock %}
<nav {{ bem('navbar ', [], [], nav_bar_extra_classes) }}>
  <div class="container-fluid">
    <ul class="navbar-nav w-100 {{ alignment }}">
      {% for item in items %}
        <li class="nav-item">
          {% if item.href %}
            <a class="nav-link" href="{{ item.href }}">{{ item.title }}</a>
          {% else %}
            <a class="nav-link" href="#{{ item.title|lower|replace({' ': '-'}) }}--{{ item.id }}">{{ item.title }}</a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
</nav>
{% block body_section %}

{% endblock %}
