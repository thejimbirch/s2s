{% macro menu_links(items, attributes, menu_level, menu_class, menu_modifiers, menu_blockname, item_menu_class, item_modifiers, item_blockname, directory) %}
  {% set menu_class = menu_class|default('footer-social-links') %}
  {% import _self as menus %}
  <ul {{ bem(menu_class, [], [], ['list-unstyled']) }}>
    {% for item in items %}
      {% set li_extra_class = [
          menu_class ~ '__item',
        ]
      %}
      <li {{ item.attributes.addClass(li_extra_class)}}>
      {% if item.url.getOption('attributes') %}
        {% set link_attributes = create_attribute(item.url.getOption('attributes')) %}
      {% else %}
        {% set link_attributes = create_attribute() %}
      {% endif %}
        <a {{ link_attributes }} href="{{ item.url }}" aria-label="sales {{ item.title }}">
          <span class="sr-only hidden d-none">sales {{ item.title}}</span>
          {% if item.title|lower == 'linkedin' %}
            {% include "@sales/icons/_icons.twig" with {
              icon_name: 'linkedin',
              icon_base_class: 'footer-social-links__icon',
              icon_modifiers: item.title|lower|replace({' ': '-'})
            } %}
          {% elseif item.title|lower == 'tumblr' %}
            {% include "@sales/icons/_icons.twig" with {
              icon_name: 'tumblr',
              icon_base_class: 'footer-social-links__icon',
              icon_modifiers: item.title|lower|replace({' ': '-'})
            } %}
          {% elseif item.title|lower == 'facebook' %}
            {% include "@sales/icons/_icons.twig" with {
              icon_name: 'facebook',
              icon_base_class: 'footer-social-links__icon',
              icon_modifiers: item.title|lower|replace({' ': '-'})
            } %}
          {% elseif item.title|lower == 'twitter' %}
            {% include "@sales/icons/_icons.twig" with {
              icon_name: 'twitter',
              icon_base_class: 'footer-social-links__icon',
              icon_modifiers: item.title|lower|replace({' ': '-'})
            } %}
          {% elseif item.title|lower == 'instagram' %}
            {% include "@sales/icons/_icons.twig" with {
              icon_name: 'instagram',
              icon_base_class: 'footer-social-links__icon',
              icon_modifiers: item.title|lower|replace({' ': '-'})
            } %}
          {% elseif item.title|lower == 'youtube' %}
            {% include "@sales/icons/_icons.twig" with {
              icon_name: 'youtube',
              icon_base_class: 'footer-social-links__icon',
              icon_modifiers: item.title|lower|replace({' ': '-'})
            } %}
          {% elseif item.title|lower == 'pinterest' %}
            {% include "@sales/icons/_icons.twig" with {
              icon_name: 'pinterest',
              icon_base_class: 'footer-social-links__icon',
              icon_modifiers: item.title|lower|replace({' ': '-'})
            } %}
          {% else %}
            <i class="footer-social-links__icon footer-social-links__icon--{{ item.title|lower }} bi-{{ item.title|lower }}" role="img" aria-label="{{ item.title|lower }}">{{ item.title|lower }}</i>
          {% endif %}
        </a>
      </li>
    {% endfor %}
  </ul>
{% endmacro %}
{% import _self as menus %}
{{ menus.menu_links(items, attributes, 0, menu_class, menu_modifiers, menu_blockname, item_menu_class, item_modifiers, item_blockname, directory) }}

